{
    "version": "0.2.0",
    "configurations": [    
        {
            "type": "chrome",
            "request": "launch",
            "name": "launch Chrome and open localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Launch index.html ",
            "type": "firefox",
            "request": "launch",
           // "sourceMaps": false,
            //"url": "http://localhost:8080",
            "file": "${workspaceRoot}/index.html"  
        },
        
    ]
}